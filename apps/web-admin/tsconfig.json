{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@/*": ["./*"],
      "@workspace/ui/*": ["../../packages/ui/src/*"],
      "@/admin/packages/schema/*": [
        "../../packages/services/schema/*"
      ],
      "@/admin/packages/types/*": [
        "../../packages/services/types/*"
      ],
      "@/admin/packages/utils/*": [
        "../../packages/services/utils/*"
      ],
      "@/admin/packages/validations/*": [
        "../../packages/services/validations/*"
      ],
      "@/admin/packages/fonts/*": [
        "../../packages/services/fonts/*"
      ],
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/services/schema",
    "../../packages/services/types",
    "../../packages/services/utils",
    "../../packages/services/validations",
    "../../packages/services/fonts",
  ],
  "exclude": ["node_modules"]
}
